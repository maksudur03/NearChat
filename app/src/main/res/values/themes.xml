<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NearbyApi" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NearbyApi.Splash" parent="Theme.SplashScreen">
        <!-- Splash screen background color -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_near_chat</item>

        <!-- Duration of the fade-out animation (optional) -->
        <item name="windowSplashScreenAnimationDuration">10000</item>

        <!-- Post-splash theme (your main theme) -->
        <item name="postSplashScreenTheme">@style/Theme.NearbyApi</item>
    </style>
</resources>